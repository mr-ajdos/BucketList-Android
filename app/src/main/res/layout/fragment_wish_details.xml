<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >


        <ProgressBar
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/circle"
            android:id="@+id/progressBar_details"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:rotation="-90"
            android:layout_gravity="center"
            android:min="0"
            android:max="500"
            android:progress="250"
            />
        <ProgressBar
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/circle_background"
            android:layout_width="209dp"
            android:layout_height="200dp"
            android:rotation="-90"
            android:layout_gravity="center"
            android:min="0"
            android:max="500"
            android:progress="500"
            />

        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="20dp"
            android:id="@+id/lbl_progress_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            />

        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reached"
            />

        <!-- section saved money -->
        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="saved"
            />

        <TextView
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="60dp"
            android:id="@+id/lbl_progress_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250.00 KM"
            />



        <!--  section remaining to save-->


        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_columnWeight=".50"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="remaining"
            />

        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:id="@+id/lbl_progress_remaining"
            android:layout_width="wrap_content"
            android:layout_columnWeight=".50"
            android:layout_height="wrap_content"
            android:text="250.00 KM"
            />


        <!--  section total to save-->


        <TextView
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_columnWeight=".50"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="total"
            />

        <TextView
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:id="@+id/lbl_progress_total"
            android:layout_width="wrap_content"
            android:layout_columnWeight=".50"
            android:layout_height="wrap_content"
            android:text="500.00 KM"
            />
    </GridLayout>


</RelativeLayout>